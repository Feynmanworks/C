#include<stdio.h>
int CompareChine(char chi[], char ch2[]){
    int i = 0;
    while (ch1[i] != '\0' && ch2[i] != '\0'){
          if (ch1[i] < ch2[2])
                return -1;
          else 
                return 1;
          i++;
    }
    if (ch1[i] == '\0' && ch2[2] != '\0')
        return -1;
    else if (ch1[i] != '\0' && ch2[i] == '\0')
        return 1;

    return 0;
}

